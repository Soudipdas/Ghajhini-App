<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR PROFILE"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/head"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000"
        android:fontFamily="@font/futur"/>

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:id="@+id/notify"
        android:background="@drawable/ic_baseline_notifications_active_24"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel1"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/head"
        android:layout_marginRight="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/butt">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name :: Soudip Das"
        android:layout_marginLeft="20sp"
        android:id="@+id/name"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginTop="10sp"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age :: 20"
        android:layout_marginLeft="20sp"
        android:id="@+id/age"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_below="@+id/name"
        android:textSize="25sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Mobile number :: 817XX"
        android:layout_marginLeft="20sp"
        android:id="@+id/your_mobile"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/age"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency contact number :: "
        android:id="@+id/mobile"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_below="@+id/your_mobile"
        android:textSize="25sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency email :: "
        android:layout_marginLeft="20sp"
        android:id="@+id/email"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/mobile"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address :: "
        android:layout_marginLeft="20sp"
        android:id="@+id/address"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/email"
        android:textSize="25sp"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Personal details"
        android:layout_below="@+id/rel1"
        android:id="@+id/etdetails"
        android:fontFamily="@font/futur"
        android:textStyle="bold"
        android:padding="10sp"
        android:textColor="#000"
        android:background="@drawable/butt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etdetails"
        android:background="@drawable/butt"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:paddingBottom="10sp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E8000000"

        android:layout_marginTop="10sp"
        android:fontFamily="@font/dog"
        android:gravity="center"
        android:padding="10sp"
        android:textStyle="bold"
        android:layout_marginRight="20sp"
        android:id="@+id/tt1"
        android:layout_marginLeft="20sp"
        android:text="Please Tap on the button 'RECOGNISE/ADD FRIEND' (Bottom Left) to search your friend"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E8000000"
        android:layout_below="@+id/tt1"
        android:fontFamily="@font/dog"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:text="Please Tap on the button 'PLAY INTERESTING GAMES' (Bottom Right) to play memory games"/>

    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognise/Add \n Friend"
        android:id="@+id/recadd"
        android:fontFamily="@font/futur"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="10sp"
        android:background="@drawable/butt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game"
        android:padding="10sp"
        android:text="Play Interesting \n Games"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/futur"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@drawable/butt"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20sp"/>

</RelativeLayout>