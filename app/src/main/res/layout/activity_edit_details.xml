<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_details"
    android:background="@drawable/back">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soudip Das"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:hint="Name"
        android:layout_marginLeft="20sp"
        android:id="@+id/name"
        android:layout_marginTop="30sp"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:hint="Age"
        android:layout_marginLeft="20sp"
        android:id="@+id/age"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/name"
        android:textSize="25sp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="817XX"
        android:layout_marginLeft="20sp"
        android:id="@+id/your_mobile"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/age"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Emergency contact number"
        android:id="@+id/mobile"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/your_mobile"
        android:textSize="25sp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Emergency email"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginLeft="20sp"
        android:id="@+id/email"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/mobile"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:fontFamily="@font/dog"
        android:textColor="#000"
        android:layout_marginLeft="20sp"
        android:id="@+id/address"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/email"
        android:textSize="25sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Details"
        android:textSize="20sp"
        android:fontFamily="@font/futur"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@drawable/butt"
        android:padding="10sp"
        android:id="@+id/save"
        android:layout_below="@+id/address"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>